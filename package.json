{
	"name": "assetatlas-svelte5",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"build": "vite build",
		"start": "node build/index.js",
		"dev": "vite dev",
		"dev:docker": "cd docker && docker-compose -f docker-compose.dev.yml up",
		"dev:docker:build": "cd docker && docker-compose -f docker-compose.dev.yml up --build",
		"dev:docker:down": "cd docker && docker-compose -f docker-compose.dev.yml down",
		"test": "vitest run --exclude=tests/performance.test.ts --reporter verbose --silent",
		"test:ui": "vitest --ui --exclude=tests/performance.test.ts",
		"test:perf": "vitest run tests/performance.test.ts --reporter verbose --silent",
		"coverage": "vitest run --exclude=tests/performance.test.ts --coverage --coverage.include=src/** --reporter dot --silent",
		"lint": "eslint \"{src,tests}/**/*.{js,ts,svelte}\"",
		"lint:fix": "eslint \"{src,tests}/**/*.{js,ts,svelte}\" --fix",
		"check": "tsc --noEmit",
		"migrate_down": "migrate-mongo down -f migrate-mongo-config.cjs",
		"migrate_up": "migrate-mongo up -f migrate-mongo-config.cjs",
		"migrate_status": "migrate-mongo status -f migrate-mongo-config.cjs",
		"migrate_create": "migrate-mongo create -f migrate-mongo-config.cjs"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.36.0",
		"@skeletonlabs/skeleton": "^4.1.3",
		"@skeletonlabs/skeleton-svelte": "^4.1.3",
		"@sveltejs/adapter-auto": "^6.1.0",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/kit": "^2.43.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"@tailwindcss/vite": "^4.1.13",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.2.8",
		"@types/cookie-parser": "^1.4.10",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/node": "^22",
		"@types/qrcode": "^1.5.6",
		"@types/set-cookie-parser": "^2.4.10",
		"@types/testing-library__jest-dom": "^5.14.9",
		"@typescript-eslint/parser": "^8.46.2",
		"@vitest/browser": "^3.2.4",
		"@vitest/coverage-v8": "^3.2.4",
		"autoprefixer": "^10.4.0",
		"eslint": "^9.36.0",
		"eslint-plugin-svelte": "^3.12.5",
		"globals": "^16.4.0",
		"jsdom": "^27.1.0",
		"mongodb-memory-server": "^10.3.0",
		"playwright": "^1.55.1",
		"svelte": "^5.39.5",
		"svelte-check": "^4.3.2",
		"svelte-eslint-parser": "^1.4.0",
		"svelte-preprocess": "^6.0.3",
		"tailwindcss": "^4.1.13",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.44.1",
		"vite": "^7.1.7",
		"vitest": "^3.2.4",
		"vitest-browser-svelte": "^1.1.0"
	},
	"dependencies": {
		"@lucide/svelte": "^0.562.0",
		"arctic": "^3.7.0",
		"bcryptjs": "^3.0.2",
		"cookie-parser": "^1.4.7",
		"crypto-js": "^4.2.0",
		"fuse.js": "^7.0.0",
		"gridfs-stream": "^1.1.1",
		"i": "^0.3.7",
		"jsonwebtoken": "^9.0.2",
		"jszip": "^3.10.1",
		"lucide-svelte": "^0.561.0",
		"migrate-mongo": "^14.0.7",
		"mongodb": "^5.9.1",
		"mongoose": "^8.9.5",
		"multer-gridfs-storage": "^5.0.2",
		"otplib": "^12.0.1",
		"qrcode": "^1.5.4",
		"set-cookie-parser": "^2.7.2",
		"svelte-device-info": "^1.0.6",
		"svelte-icons": "^2.1.0",
		"svelte-portal": "^2.2.1",
		"tus-js-client": "^4.3.1"
	}
}
